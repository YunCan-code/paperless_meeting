<script setup>
import { ref, reactive, onMounted } from 'vue'
import { 
  User, UserFilled, DataLine, Trophy, 
  Search, Upload, Download, Plus, 
  Top, Bottom, EditPen, Key, Delete, Camera
} from '@element-plus/icons-vue'

// --- Mock Data ---
const loading = ref(true)
const searchQuery = ref('')
const roleFilter = ref('')
const statusFilter = ref('å…¨éƒ¨')
const dialogVisible = ref(false)
const dialogType = ref('create')

// æ¨¡æ‹Ÿè¡¨å•æ•°æ®
const form = reactive({
  name: '',
  phone: '',
  email: '',
  department: '',
  role: '',
  status: 'active',
  avatar: ''
})

// é¡¶éƒ¨ç»Ÿè®¡æ•°æ®
const statsData = [
  { label: 'æ€»ç”¨æˆ·æ•°', value: '2,845', trend: 12, icon: 'User', color: 'blue' },
  { label: 'ä»Šæ—¥æ´»è·ƒ', value: '1,230', trend: 5.4, icon: 'DataLine', color: 'green' },
  { label: 'ç®¡ç†å‘˜', value: '18', trend: 0, icon: 'UserFilled', color: 'purple' },
  { label: 'æœ¬å‘¨æ–°å¢', value: '124', trend: -2.1, icon: 'Trophy', color: 'orange' },
]

// æ¨¡æ‹Ÿç”¨æˆ·åˆ—è¡¨
const userList = ref([])

onMounted(() => {
  // æ¨¡æ‹Ÿ API è¯·æ±‚å»¶è¿Ÿ
  setTimeout(() => {
    userList.value = [
      { id: 1, name: 'å¼ ä¼Ÿ', email: 'zhangwei@company.com', avatar: '', department: 'ç ”å‘ä¸­å¿ƒ', job: 'åç«¯ä¸»ç®¡', role: 'admin', roleName: 'è¶…çº§ç®¡ç†å‘˜', status: 'active', lastLogin: '2025-12-20 09:30' },
      { id: 2, name: 'Linda Johnson', email: 'linda.j@company.com', avatar: 'https://i.pravatar.cc/150?u=a042581f4e29026024d', department: 'è®¾è®¡éƒ¨', job: 'UIè®¾è®¡å¸ˆ', role: 'user', roleName: 'æ™®é€šç”¨æˆ·', status: 'active', lastLogin: '2025-12-19 18:20' },
      { id: 3, name: 'é™ˆæ€æ€', email: 'chen.sisi@company.com', avatar: '', department: 'å¸‚åœºéƒ¨', job: 'è¿è¥ç»ç†', role: 'leader', roleName: 'éƒ¨é—¨é¢†å¯¼', status: 'active', lastLogin: '2025-12-20 08:45' },
      { id: 4, name: 'Michael Wang', email: 'm.wang@company.com', avatar: '', department: 'æµ‹è¯•éƒ¨', job: 'æµ‹è¯•å·¥ç¨‹å¸ˆ', role: 'user', roleName: 'æ™®é€šç”¨æˆ·', status: 'inactive', lastLogin: '2025-11-15 10:00' },
      { id: 5, name: 'åˆ˜å¼º', email: 'liu.qiang@company.com', avatar: '', department: 'è¿ç»´éƒ¨', job: 'SRE', role: 'user', roleName: 'æ™®é€šç”¨æˆ·', status: 'active', lastLogin: '2025-12-20 01:12' },
    ]
    loading.value = false
  }, 800)
})

// --- Logic ---

// æ ¹æ®å§“åç”Ÿæˆå¤´åƒèƒŒæ™¯è‰² (è®©å®ƒçœ‹èµ·æ¥éšæœºä½†å›ºå®š)
const getAvatarColor = (name) => {
  const colors = ['#3b82f6', '#10b981', '#f59e0b', '#8b5cf6', '#ec4899', '#6366f1']
  let hash = 0
  for (let i = 0; i < name.length; i++) {
    hash = name.charCodeAt(i) + ((hash << 5) - hash)
  }
  return colors[Math.abs(hash) % colors.length]
}

const getRoleTagType = (role) => {
  const map = { admin: 'danger', leader: 'warning', user: 'info' }
  return map[role] || 'info'
}

const openDialog = (type, row = null) => {
  dialogType.value = type
  if (type === 'edit' && row) {
    Object.assign(form, row)
  } else {
    // reset form
    form.name = ''
    form.avatar = ''
    form.status = 'active'
  }
  dialogVisible.value = true
}
</script>

